<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Autodoc" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/black</item>

        <item name="colorPrimary">@color/night_theme_background</item>
        <item name="colorPrimaryVariant">@color/night_theme_background</item>
        <item name="colorOnPrimary">@color/blue_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_theme_background</item>
        <item name="colorSecondaryVariant">@color/night_theme_background</item>
        <item name="colorOnSecondary">@color/night_theme_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/white_theme_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ImageViewStyle">
        <item name="android:tint">@color/white_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:tint">@color/white_color</item>
        <item name="android:textColorPrimary">@color/white_color</item>
        <item name="android:textColorHint">@color/white_color</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/white_color</item>
    </style>

    <style name="ItemViewStyle">
        <item name="android:background">@color/night_theme_background</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>